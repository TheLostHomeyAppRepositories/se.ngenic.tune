{
  "name": {
    "en": "Sensor"
  },
  "class": "sensor",
  "capabilities": [
    "measure_temperature",
    "measure_humidity",
    "measure_battery",
    "measure_signal_strength"
  ],
  "capabilitiesOptions": {
    "measure_signal_strength": {
      "units": "%",
      "decimals": 0,
      "min": 0,
      "max": 100
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "energy": {
    "batteries": ["AAA", "AAA"]
  }
}